generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String              @id @default(cuid())
  email        String              @unique
  passwordHash String
  name         String?
  role         Role                @default(USER)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  tokens       NotificationToken[]
}

model NotificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model Extinguisher {
  id             String    @id @default(cuid())
  location       String
  floor          Floor
  x              Int
  y              Int
  chargeDate     DateTime
  expirationDate DateTime
  lastInspection DateTime?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model FloorShape {
  id        String    @id @default(cuid())
  floor     Floor
  key       String    @unique
  type      ShapeType
  x         Int
  y         Int
  width     Int?
  height    Int?
  fill      String?
  stroke    String?
  text      String?
  anchor    String?
  className String?
  deleted   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum Floor {
  ground
  first
}

enum ShapeType {
  rect
  text
}